{
  "extends": "../../../../packages/tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./.tsbuild",
    // "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".tsbuild",
    "**/*.js",
    "**/*.d.ts"
  ]
}